# pyproject.toml - Python Project Configuration
# Generated by Claude Scraper Agent for data collection projects
#
# This file configures mypy (type checking) and ruff (linting/formatting)
# for generated scrapers.

[tool.mypy]
# Python version target
python_version = "3.9"

# Strict type checking options
warn_return_any = true
warn_unused_configs = true
disallow_untyped_defs = true
disallow_incomplete_defs = true
check_untyped_defs = true
disallow_untyped_calls = false  # Allow untyped calls to third-party libs without stubs

# Error output
show_error_codes = true
pretty = true

# Paths to exclude from type checking
exclude = [
    "tests/fixtures/",
    "venv/",
    ".venv/",
    "build/",
    "dist/",
]

# Per-module overrides
[[tool.mypy.overrides]]
module = "boto3.*"
ignore_missing_imports = true

[[tool.mypy.overrides]]
module = "redis.*"
ignore_missing_imports = true

[[tool.mypy.overrides]]
module = "click.*"
ignore_missing_imports = true

[[tool.mypy.overrides]]
module = "bs4.*"
ignore_missing_imports = true

[[tool.mypy.overrides]]
module = "paramiko.*"
ignore_missing_imports = true

[[tool.mypy.overrides]]
module = "confluent_kafka.*"
ignore_missing_imports = true

[tool.ruff]
# Line length limit
line-length = 100

# Python version target
target-version = "py39"

# Rule selection
select = [
    "E",   # pycodestyle errors
    "F",   # pyflakes
    "I",   # isort (import sorting)
    "N",   # pep8-naming
    "W",   # pycodestyle warnings
    "UP",  # pyupgrade (modernize code)
]

# Rules to ignore
ignore = [
    "E501",  # Line too long (handled by formatter)
]

# Exclude directories
exclude = [
    ".git",
    ".venv",
    "venv",
    "__pycache__",
    "build",
    "dist",
    "*.egg-info",
    "tests/fixtures",
]

[tool.ruff.per-file-ignores]
# Allow unused imports in __init__.py files
"__init__.py" = ["F401"]

# Allow print statements in test files
"test_*.py" = ["T201"]

[tool.ruff.isort]
# Import sorting configuration
known-first-party = ["sourcing"]
section-order = ["future", "standard-library", "third-party", "first-party", "local-folder"]

[tool.ruff.format]
# Code formatting options
quote-style = "double"
indent-style = "space"
line-ending = "auto"

# Additional tools can be configured here:
# [tool.pytest.ini_options]
# [tool.coverage.run]
# etc.
